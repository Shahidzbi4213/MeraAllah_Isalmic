<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbarAllahName"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/detail_activity_background"
        android:elevation="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/counterView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/catamaran_medium"
            android:gravity="end"
            android:text="(1)"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="@dimen/_20sdp"
            app:autoSizeTextType="uniform" />


        <TextView
            android:id="@+id/nameInArabic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/q_font"
            android:gravity="center"
            android:text="@string/nameOfAllah"
            android:textColor="@color/gold"
            app:autoSizeMaxTextSize="@dimen/_20sdp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/nameInEnglish"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/catamaran_medium"
            android:gravity="center"
            android:text="Allah"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:autoSizeMaxTextSize="@dimen/_18sdp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/meaningOfName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/catamaran_medium"
            android:gravity="center"
            android:text="Meaning: The Giver of Peace"
            android:textColor="@color/gold"
            android:layout_marginBottom="@dimen/_5sdp"
            app:autoSizeMaxTextSize="@dimen/_15sdp"
            app:autoSizeTextType="uniform"
            android:textStyle="italic" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/detail_activity_background"
        android:elevation="@dimen/_5sdp"
        android:layout_weight="1.7"
        android:orientation="vertical">


        <TextView
            android:id="@+id/referenceOfName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="Reference:"
            android:fontFamily="@font/catamaran_medium"
            android:textColor="@color/white"
            app:autoSizeMaxTextSize="@dimen/_14sdp"
            app:autoSizeTextType="uniform"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/referenceInArabic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1"
            android:fontFamily="@font/q_font"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:text="@string/bismiAllah"
            android:textColor="@color/gold"
            app:autoSizeMaxTextSize="@dimen/_20sdp"
            app:autoSizeTextType="uniform"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/referenceInEnglish"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:fontFamily="@font/catamaran_medium"
            android:gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:lineSpacingExtra="@dimen/_3sdp"
            android:text="@string/meaningOfAyat"
            android:textColor="@color/white"
            app:autoSizeMaxTextSize="@dimen/_16sdp"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_weight="0.3"
        android:background="@android:color/transparent"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/detail_activity_background"
            android:elevation="@dimen/_5sdp"
            android:fontFamily="@font/catamaran_medium"
            android:text="@string/previous"
            android:gravity="center"
            android:textColor="@color/white"
            app:autoSizeMaxTextSize="@dimen/_12sdp"
            app:autoSizeTextType="uniform" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/detail_activity_background"
            android:elevation="@dimen/_5sdp"
            android:fontFamily="@font/catamaran_medium"
            android:text="@string/next"
            android:textColor="@color/white"
            app:autoSizeMaxTextSize="@dimen/_12sdp"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

</LinearLayout>