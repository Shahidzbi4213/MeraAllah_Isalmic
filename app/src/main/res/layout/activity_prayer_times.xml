<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.PrayerTime">

    <include
        android:id="@+id/toolbar_include_prayer_time"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_weight="1"
        android:background="@drawable/view_background"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/catamaran_medium"
                android:gravity="center"
                android:text="@string/date"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/catamaran_medium"
                android:gravity="center"
                android:text="@string/month"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/catamaran_medium"
                android:gravity="center"
                android:text="@string/year"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/catamaran_medium"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/gold"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/monthTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/catamaran_medium"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/gold"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/yearTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/catamaran_medium"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/gold"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/locationLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/viewNow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/view_background"
            android:backgroundTint="#F4B41A"
            android:elevation="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/catamaran_medium"
                android:gravity="center"
                android:text="Sunrise"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/sunRise"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/catamaran_medium"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewNext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/view_background"
            android:backgroundTint="#0BEA7E"
            android:elevation="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/catamaran_medium"
                android:gravity="center"
                android:text="Next"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/nextPrayer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/catamaran_medium"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />


        </LinearLayout>

        <TextView
            android:id="@+id/loc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/view_background"
            android:backgroundTint="#00C4E6"
            app:tint ="#00C4E6"
            android:elevation="@dimen/_10sdp"
            android:fontFamily="@font/catamaran_medium"
            android:gravity="center"
            android:text="@string/location"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:autoSizeMaxTextSize="@dimen/_13sdp"
            app:autoSizeTextType="uniform"
            android:drawableTint="@color/black"
            app:drawableRightCompat="@drawable/ic_location" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutFajr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_weight="1"
        android:background="@drawable/view_background"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvFajarName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/catamaran_medium"
            android:gravity="center"
            android:text="Fajar"
            android:textColor="@color/gold"
            android:textSize="@dimen/_20sdp"
            tools:ignore="HardcodedText,NestedWeights" />

        <TextView
            android:id="@+id/tvFajarTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/catamaran_medium"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutZuhur"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_weight="1"
        android:background="@drawable/view_background"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvZuhurName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/catamaran_medium"
            android:gravity="center"
            android:text="Zuhur"
            android:textColor="@color/gold"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/tvZuhurTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/catamaran_medium"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAsr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_weight="1"
        android:background="@drawable/view_background"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvAsrName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/catamaran_medium"
            android:gravity="center"
            android:text="Asr"
            android:textColor="@color/gold"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/tvAsrTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/catamaran_medium"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMaghrib"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_weight="1"
        android:background="@drawable/view_background"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvMaghribName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/catamaran_medium"
            android:gravity="center"
            android:text="Maghrib"
            android:textColor="@color/gold"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/tvMaghribTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/catamaran_medium"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutIsha"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_weight="1"
        android:background="@drawable/view_background"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvIshaName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/catamaran_medium"
            android:gravity="center"
            android:text="Isha"
            android:textColor="@color/gold"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/tvIshaTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/catamaran_medium"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp" />
    </LinearLayout>


</LinearLayout>