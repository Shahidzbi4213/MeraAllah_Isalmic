<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.HadithOfDay">

    <include
        android:id="@+id/toolbar_include_HadithOfDay"
        layout="@layout/toolbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical">


            <com.bullhead.quranquotes.views.HadithOfDayView
                android:id="@+id/hadithDay"
                style="@style/Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:theme="@style/Regular"
                android:textAlignment="center"
                android:background="@drawable/view_background"
                app:hadithTextColor="@color/white"
                app:hadithTextSize="@dimen/_16sdp"
                app:infoTextColor="@color/gold"
                app:infoTextSize="@dimen/_12sdp">

            </com.bullhead.quranquotes.views.HadithOfDayView>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>